<p><a href="<?php echo $this -> url(array('controller' => 'dictionary', 'action' => 'change', 'id' => $dictionary['id']), null, true);?>"><?php echo $dictionary['ftitle']?> - <?php echo $dictionary['ttitle']?></a></p>
<?php endforeach;?>
<?php endif;?>
